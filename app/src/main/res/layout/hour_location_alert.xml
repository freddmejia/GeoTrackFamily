<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="20sp"
        android:layout_marginHorizontal="10sp">
        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_time_friend_shorta"
            style="@style/bold_medium"
            android:layout_marginBottom="15sp"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvtimeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginBottom="15sp"
            app:strokeWidth="1sp"
            app:strokeColor="@color/yellow_7d"
            android:layout_marginHorizontal="5sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5sp">
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/time_location_icon"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/timeStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/time_start"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/normal_medium"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvtimeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginBottom="25sp"
            app:strokeWidth="1sp"
            app:strokeColor="@color/yellow_7d"
            android:layout_marginHorizontal="5sp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5sp">
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:src="@drawable/time_location_icon"
                    android:layout_marginRight="10sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/timeEnd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/time_start"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    style="@style/normal_medium"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</RelativeLayout>