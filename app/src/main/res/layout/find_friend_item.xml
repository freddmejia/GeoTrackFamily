        <com.google.android.material.card.MaterialCardView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20sp"
            android:layout_marginBottom="10sp"
            app:strokeColor="@color/gray_7c"
            android:layout_marginHorizontal="5sp"
            app:cardUseCompatPadding="false"
            app:cardElevation="8sp"
            app:cardBackgroundColor="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15sp"
                android:layout_marginHorizontal="10sp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/deleteFriend"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:src="@drawable/close_icon"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/isFriend"
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:src="@drawable/check_icon"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/imUser"
                    android:layout_width="38sp"
                    android:layout_height="38sp"
                    android:src="@drawable/user_icon"
                    android:layout_marginBottom="5sp"
                    />
                <TextView
                    android:id="@+id/nameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jose Perez"
                    style="@style/normal_medium"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginBottom="5sp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_a7"
                    app:cardCornerRadius="10sp"
                    android:layout_marginBottom="10sp"
                    >
                    <ImageView
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:src="@drawable/plus_icon_white"
                        android:layout_marginBottom="5sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
