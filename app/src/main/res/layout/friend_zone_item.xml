<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linearItem"
    android:layout_marginHorizontal="6sp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="53sp"
        android:layout_height="53sp"
        app:cardCornerRadius="50sp"
        android:backgroundTint="@color/blue_a7"
        android:layout_gravity="center"
        android:layout_marginBottom="1sp"
        android:elevation="8sp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="50sp"
            android:layout_height="50sp"
            app:cardCornerRadius="50sp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_icon"
                android:padding="10sp"/>
        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/nameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fsjafds  sdjfh sdfjhsd flaksl"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingBottom="2sp"
        android:gravity="center"/>
    <View
        android:id="@+id/choosedUser"
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/black"
        android:visibility="gone"/>
</LinearLayout>